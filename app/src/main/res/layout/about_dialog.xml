<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/aboutdialog"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_editor_absoluteX="match_parent"
    tools:layout_editor_absoluteY="match_parent">

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="100dp"
        android:layout_height="123dp"
        android:layout_marginStart="55dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="59dp"
        android:layout_marginBottom="121dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/navipng" />

    <TextView
        android:id="@+id/txtApp"
        android:layout_width="167dp"
        android:layout_height="58dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="67dp"
        android:layout_marginEnd="23dp"
        android:layout_marginBottom="121dp"
        android:fontFamily="sans-serif-black"
        android:text="Navi"
        android:textAlignment="center"
        android:textSize="48sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtAbout"
        android:layout_width="136dp"
        android:layout_height="22dp"
        android:layout_marginStart="39dp"
        android:layout_marginTop="115dp"
        android:layout_marginEnd="39dp"
        android:layout_marginBottom="109dp"
        android:fontFamily="sans-serif-thin"
        android:text="HCDC Facility Navigator"
        android:textAlignment="center"
        android:textSize="10sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtAbout2"
        android:layout_width="101dp"
        android:layout_height="11dp"
        android:layout_marginStart="55dp"
        android:layout_marginTop="137dp"
        android:layout_marginEnd="58dp"
        android:layout_marginBottom="98dp"
        android:fontFamily="sans-serif-thin"
        android:text="App Version: 0.1.0(beta)"
        android:textAlignment="center"
        android:textSize="8sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtCreator"
        android:layout_width="100dp"
        android:layout_height="22dp"
        android:layout_marginStart="55dp"
        android:layout_marginTop="158dp"
        android:layout_marginEnd="58dp"
        android:layout_marginBottom="77dp"
        android:fontFamily="sans-serif-thin"
        android:text="Developer: HCDC BSCpE Students"
        android:textAlignment="center"
        android:textSize="8sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Developer: HCDC BSCpE Students" />

    <Button
        android:id="@+id/btnClose"
        android:layout_width="99dp"
        android:layout_height="33dp"
        android:layout_marginStart="55dp"
        android:layout_marginTop="182dp"
        android:layout_marginEnd="60dp"
        android:layout_marginBottom="31dp"
        android:text="Ok"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />
</androidx.constraintlayout.widget.ConstraintLayout>