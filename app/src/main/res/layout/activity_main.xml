<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/historyLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5E7C8"
    tools:context=".LoginPage">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="374dp"
        android:layout_height="397dp"
        android:layout_marginBottom="1dp"
        android:background="#F5E7C6"
        android:contentDescription="bgLogo"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.473"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.046"
        app:srcCompat="@drawable/gemini_generated_image_16hmem16hmem16hm" />

    <TextView
        android:id="@+id/txtHelloDescription"
        android:layout_width="187dp"
        android:layout_height="51dp"
        android:text="Welcome to Navi, your personal HCDC Facility Navigator"
        android:textAlignment="center"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.565"
        tools:text="Welcome to Navi, your personal HCDC Facility Navigator" />

    <TextView
        android:id="@+id/txtHello"
        android:layout_width="128dp"
        android:layout_height="58dp"
        android:text="Hello!"
        android:textAlignment="center"
        android:textSize="48sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.48"
        tools:text="Hello!" />

    <TextView
        android:id="@+id/txtLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:layout_marginBottom="20dp"
        android:text="Login as:"
        app:layout_constraintBottom_toTopOf="@+id/btnEnrolled"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.223"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtHelloDescription"
        app:layout_constraintVertical_bias="1.0"
        tools:text="Login as:" />

    <Button
        android:id="@+id/btnEnrolled"
        android:layout_width="242dp"
        android:layout_height="49dp"
        android:text="Newly Enrolled"
        android:textAlignment="center"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.746"
        tools:text="Newly Enrolled" />

    <Button
        android:id="@+id/btnGuest"
        android:layout_width="242dp"
        android:layout_height="48dp"
        android:layout_marginBottom="108dp"
        android:text="Guest"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnEnrolled"
        app:layout_constraintVertical_bias="0.0"
        app:strokeColor="#404040"
        tools:text="Guest" />

</androidx.constraintlayout.widget.ConstraintLayout>